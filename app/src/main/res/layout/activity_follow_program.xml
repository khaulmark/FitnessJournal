<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_layout"
    android:label="Follow_Program"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_100"
    android:orientation="vertical"
    android:weightSum="4">

    <FrameLayout
        android:id="@+id/placeholder_view_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <Button
        android:id="@+id/btn_date_picker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/follow_button_height"
        android:layout_marginStart="@dimen/button_horizontal_margin"
        android:layout_marginTop="@dimen/home_button_top_margin"
        android:layout_marginEnd="@dimen/button_horizontal_margin"
        android:fontFamily="@font/galindo"
        android:text="@string/date_picker_btn"
        android:textSize="15sp"
        android:theme="@style/ThemeOverlay.MyDarkButton" />

    <Button
        android:id="@+id/btn_todays_workout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/follow_button_height"
        android:layout_marginStart="@dimen/button_horizontal_margin"
        android:layout_marginEnd="@dimen/button_horizontal_margin"
        android:fontFamily="@font/galindo"
        android:text="@string/todays_workout_btn"
        android:textSize="15sp"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:layout_marginBottom="10dp"/>

    <FrameLayout
        android:id="@+id/placeholder_follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
</LinearLayout>