<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_layout"
    android:label="Home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_100"
    android:orientation="vertical"
    android:weightSum="4">

    <Button
        android:id="@+id/btn_follow_program"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:layout_marginStart="@dimen/button_horizontal_margin"
        android:layout_marginTop="@dimen/home_button_top_margin"
        android:layout_marginEnd="@dimen/button_horizontal_margin"
        android:layout_weight="1"
        android:fontFamily="@font/galindo"
        android:text="@string/follow_program_btn"
        android:textSize="20sp"
        android:theme="@style/ThemeOverlay.MyDarkButton" />

    <Button
        android:id="@+id/btn_upload_program"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:layout_marginStart="@dimen/button_horizontal_margin"
        android:layout_marginTop="@dimen/home_button_top_margin"
        android:layout_marginEnd="@dimen/button_horizontal_margin"
        android:layout_weight="1"
        android:fontFamily="@font/galindo"
        android:text="@string/upload_program_btn"
        android:textSize="20sp"
        android:theme="@style/ThemeOverlay.MyDarkButton" />

    <Button
        android:id="@+id/btn_track_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:layout_marginStart="@dimen/button_horizontal_margin"
        android:layout_marginTop="@dimen/home_button_top_margin"
        android:layout_marginEnd="@dimen/button_horizontal_margin"
        android:layout_weight="1"
        android:fontFamily="@font/galindo"
        android:text="@string/track_progress_btn"
        android:textSize="20sp"
        android:theme="@style/ThemeOverlay.MyDarkButton" />

    <Button
        android:id="@+id/btn_favorites"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:layout_marginStart="@dimen/button_horizontal_margin"
        android:layout_marginTop="@dimen/home_button_top_margin"
        android:layout_marginEnd="@dimen/button_horizontal_margin"
        android:layout_weight="1"
        android:fontFamily="@font/galindo"
        android:text="@string/favorites_btn"
        android:textSize="20sp"
        android:theme="@style/ThemeOverlay.MyDarkButton" />

    <Button
        android:id="@+id/btn_howto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:layout_marginStart="@dimen/button_horizontal_margin"
        android:layout_marginTop="@dimen/home_button_top_margin"
        android:layout_marginEnd="@dimen/button_horizontal_margin"
        android:layout_weight="1"
        android:fontFamily="@font/galindo"
        android:text="@string/howto_btn"
        android:textSize="20sp"
        android:theme="@style/ThemeOverlay.MyDarkButton" />

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:layout_marginStart="@dimen/button_horizontal_margin"
        android:layout_marginTop="@dimen/home_button_top_margin"
        android:layout_marginEnd="@dimen/button_horizontal_margin"
        android:layout_weight="1"
        android:fontFamily="@font/galindo"
        android:text="@string/sign_out"
        android:textSize="20sp"
        android:theme="@style/ThemeOverlay.MyDarkButton" />

</LinearLayout>